<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.ael.tgdbscraper" name="TGDB scraper for AEL" version="0.0.1" provider-name="chrisism">
  <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.ael" version="0.10.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Scraper module for AEL plugin.</summary>
    <description lang="en_GB">
    This module can be used as a scraper plugin for AEL. It can be used to scrape metadata and assets
    from The Games DB (TGDB).
    </description>
    <platform>all</platform>
    <license>GNU General Public License version 2</license>
    <email>crizizz@gmail.com</email>
    <forum>http://forum.kodi.tv/showthread.php?tid=287826</forum>
    <website>https://github.com/chrisism/script.ael.tgdbscraper</website>
    <source>https://github.com/chrisism/script.ael.tgdbscraper</source>
    <assets>
      <icon>media/icon.png</icon>
      <fanart>media/fanart.jpg</fanart>
    </assets>
    <news>See changelog.txt for information about the latest release.</news>
  </extension>
</addon>