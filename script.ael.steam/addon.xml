<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.ael.steam" name="Steam library plugin for AEL" version="0.0.3" provider-name="chrisism">
  <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.ael" version="0.10.2"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>game</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Steam scanner and launcher for AEL plugin.</summary>
    <description lang="en_GB">
    This module can be used as a scanner and launcher plugin for AEL. It can scan and launch games from your
    Steam library.
    </description>
    <platform>all</platform>
