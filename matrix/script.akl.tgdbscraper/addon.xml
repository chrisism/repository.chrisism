<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.akl.tgdbscraper" name="TGDB scraper for AKL" version="0.1.0" provider-name="chrisism">
  <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.akl" version="1.0.5"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>game</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Scraper module for AKL plugin.</summary>
    <description lang="en_GB">
    This module can be used as a scraper plugin for AKL. It can be used to scrape metadata and assets
    from The Games DB (TGDB).
    </description>
    <platform>all</platform>
    <license>GNU General Public License version 2</license>
    <email>crizizz@gmail.com</email>
    <forum>http://forum.kodi.tv/showthread.php?tid=366351</forum>
    <website>https://github.com/chrisism/script.akl.tgdbscraper</website>
    <source>https://github.com/chrisism/script.akl.tgdbscraper</source>
    <assets>
      <icon>media/icon.png</icon>
      <fanart>media/fanart.jpg</fanart>
    </assets>
    <news>The initial release of TGDB plugin for the AKL fork.</news>
  </extension>
</addon>